<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/form_page_root_view">

        <!--************************************************-->
        <!--name surname middleName-->



        <TextView
            android:id="@+id/label_name"
            style="@style/form_label"
            android:text="@string/label_name" />
        <EditText
            android:tag = '{ "label" :  "label_name"  ,  "strategy": "edit_text"  ,   "validators": ["required"]   ,   "labelView": "label_name" }'
            android:id="@+id/name"
            style="@style/form_field" />


        <TextView
            android:id="@+id/label_surname"
            style="@style/form_label"
            android:text="@string/label_surname" />
        <EditText
            android:tag = '{ "label" :  "label_surname"  ,  "strategy": "edit_text"  ,   "validators": []   ,   "labelView": "label_surname" }'
            android:id="@+id/surname"
            style="@style/form_field" />


        <TextView
            android:id="@+id/label_middleName"
            style="@style/form_label"
            android:text="@string/label_middleName" />
        <EditText
            android:tag = '{ "label" :  "label_middleName"  ,  "strategy": "edit_text"  ,   "validators": []   ,   "labelView": "label_middleName" }'
            android:id="@+id/middleName"
            style="@style/form_field" />


        <!--************************************************-->
        <!--address city state zip-->
        <TextView
            android:id="@+id/label_address"
            style="@style/form_label"
            android:text="@string/label_address" />
        <EditText
            android:tag = '{ "label" :  "label_address"  ,  "strategy": "edit_text"  ,   "validators": []   ,   "labelView": "label_address" }'
            android:id="@+id/address"
            style="@style/form_field" />


        <TextView
            android:id="@+id/label_city"
            style="@style/form_label"
            android:text="@string/label_city" />
        <EditText
            android:tag = '{ "label" :  "label_city"  ,  "strategy": "edit_text"  ,   "validators": []   ,   "labelView": "label_city" }'
            android:id="@+id/city"
            style="@style/form_field" />


        <TextView
            android:id="@+id/label_state"
            style="@style/form_label"
            android:text="@string/label_state" />
        <Spinner
            android:tag = '{ "label" :  "label_state"  ,  "strategy": "spinner"  ,   "validators": []   ,   "labelView": "label_state" }'
            android:id="@+id/state"
            android:entries="@array/us_states_options"
            style="@style/form_spinner" />

        <TextView
            android:id="@+id/label_zip"
            style="@style/form_label"
            android:text="@string/label_zip" />
        <EditText
            android:tag = '{ "label" :  "label_zip"  ,  "strategy": "edit_text"  ,   "validators": []   ,   "labelView": "label_zip" }'
            android:id="@+id/zip"
            style="@style/form_field" />




        <!--************************************************-->
        <!--email  phone-->
        <TextView
            android:id="@+id/label_email"
            style="@style/form_label"
            android:text="@string/label_email" />
        <EditText
            android:tag = '{ "label" :  "label_email"  ,  "strategy": "edit_text"  ,   "validators": []   ,   "labelView": "label_email" }'
            android:id="@+id/email"
            style="@style/form_field"
            android:inputType="textEmailAddress" />
        

        <TextView
            android:id="@+id/label_phone"
            style="@style/form_label"
            android:text="@string/label_phone" />

        <EditText
            android:tag = '{ "label" :  "label_phone"  ,  "strategy": "edit_text"  ,   "validators": []   ,   "labelView": "label_phone" }'
            android:id="@+id/phone"
            style="@style/form_field"
            android:inputType="phone" />


    </LinearLayout>


</ScrollView>
